general {
        colors = true
		color_good = "#FFFFFF"
        interval = 2
	output_format = "i3bar"
}
order += "memory"
order += "disk /"
order += "cpu_temperature 1"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "load"
order += "read_file util"
order += "read_file temp"
order += "volume master"
order += "time"

cpu_temperature 1 {
    format = "%degrees ¬∞C"
    # –≤–µ—Ä—Ö–Ω–∏–π –ø–æ—Ä–æ–≥ —Ç–µ–º–ø–µ—Ä–∞—Ç—É—Ä—ã, –ø—Ä–∏ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–∏ –∫–æ—Ç–æ—Ä–æ–≥–æ
    # –≤—ã–≤–æ–¥ –æ–∫—Ä–∞—Å–∏—Ç—Å—è –∫—Ä–∞—Å–Ω—ã–º,
    # –∏ —Ñ–æ—Ä–º–∞—Ç –∏–∑–º–µ–Ω–∏—Ç—Å—è –Ω–∞ format_above_threshold
    max_threshold = "85"
    format_above_threshold = "%degrees ¬∞C"
    path = "/sys/module/nvme/drivers/pci:nvme/0000:03:00.0/nvme/nvme0/hwmon1/temp1_input"
}

read_file util {
	format = "GPU%content"
	format_bad ="GPU 100: %error"
	path = /home/vasilii/.config/i3status/gpu_t/util
}

read_file temp {
	format = "%content ¬∞C"
	format_bad ="90: %error"
	path = /home/vasilii/.config/i3status/gpu_t/temp
}

time {
	format = "ÔÅ≥ %a-%d-%b üïì %H:%M"
}

volume master {
        format = "üîä %volume"
        format_muted = "ÔÄ¶ –ó–≤—É–∫ –≤—ã–∫–ª."
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

disk "/" {
    # –¥–æ—Å—Ç—É–ø–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ:
    # %used, %percentage_used - –∑–∞–Ω—è—Ç–æ–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–æ
    # %free, %percentage_free - —Å–≤–æ–±–æ–¥–Ω–æ–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–æ
    # %avail, %percentage_avail - –¥–æ—Å—Ç—É–ø–Ω–æ–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–æ
    # %total - –≤—Å–µ–≥–æ
    format = "ÔÇ†  %percentage_used"
    # –±—É–¥–µ—Ç –æ–∫—Ä–∞—à–µ–Ω –≤ "color_bad" (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –∫—Ä–∞—Å–Ω—ã–π)
    # –ø—Ä–∏ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–∏ –Ω–∏–∂–Ω–µ–≥–æ –ø–æ—Ä–æ–≥–∞ –º–µ–Ω–µ–µ 10GB –¥–æ—Å—Ç—É–ø–Ω–æ–≥–æ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–∞
    low_threshold = "10"
    threshold_type = "gbytes_avail"
    format_below_threshold = "ÔÇ† Warning: %percentage_used "
}

memory {
    # –¥–æ—Å—Ç—É–ø–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ:
    # %total, percentage_total
    # %used, percentage_used
    # %free, percentage_free
    # %available, percentage_available
    # %shared, percentage_shared
    format = "Ôî∏ %used/%total"
    # –ø–æ—Ä–æ–≥, –ø—Ä–∏ –∫–æ—Ç–æ—Ä–æ–º –≤—ã–≤–æ–¥ –æ–∫—Ä–∞—Å–∏—Ç—Å—è –≤
    # –∂–µ–ª—Ç—ã–π (degraded) –∏–ª–∏ –∫—Ä–∞—Å–Ω—ã–π (critical)
    # –∞ —Ñ–æ—Ä–º–∞—Ç –≤—ã–≤–æ–¥–∞ –∏–∑–º–µ–Ω–∏—Ç—Å—è –Ω–∞ format_degraded
    threshold_degraded = "1G"
    threshold_critical = "200M"
    format_degraded = "Ôî∏ < %available"
}

cpu_usage {
    # %usage - –ø—Ä–æ—Ü–µ–Ω—Ç–Ω–æ–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –¶–ü
    # %cpu<N> - –Ω–∞—á–∏–Ω–∞—è —Å %cpu0 –∏ –¥–∞–ª–µ–µ –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —è–¥–µ—Ä
    format = "Ôãõ %usage"
    # –¥–æ—Å—Ç—É–ø–Ω—ã –ø–∞—Ä–∞–º–µ—Ç—Ä—ã:
     degraded_threshold = 80
     max_threshold = 95
    # –∏ –∫–∞—Å—Ç–æ–º–Ω—ã–µ —Ñ–æ—Ä–º–∞—Ç—ã –¥–ª—è –Ω–∏—Ö
    # format_above_degraded_threshold –∏ format_above_threshold
}

load {
	format = "Ôéê %1min %15min"
	 max_threshold = 12
	 format_above_threshold ="Ôéê %1min %15min"
}

